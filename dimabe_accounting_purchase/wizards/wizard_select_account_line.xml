<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="wizard_select_account_line_form" model="ir.ui.view">
        <field name="name">Seleccionar Apunte a Asociar</field>
        <field name="model">wizard.select.account.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="message"/>
                    <notebook>
                        <page string="Lineas de Factura">
                            <field name="account_move_line_ids">
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="selection_line"/>
                                    <field name="product_id" readonly="1"/>
                                    <field name="description" readonly="1"/>
                                    <field name="account_id" readonly="1"/>
                                    <field name="analytic_account_id" readonly="1"/>
                                    <field name="analytic_tag_ids" readonly="1" widget="many2many_tags"/>
                                    <field name="quantity" readonly="1"/>
                                    <field name="product_uom_id" string="UdM" readonly="1"/>
                                    <field name="price_unit" readonly="1"/>
                                    <field name="price_subtotal" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button type="object" name="associate_selection" string="Enlazar SelecciÃ³n"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>