<odoo>
    <data>
        <record id="view_partner_dte_form_inherit" model="ir.ui.view">
            <field name="name">Formulario de Contacto DTE</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_cl_edi.view_partner_l10n_cl_edi_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='dte']//field[@name='l10n_cl_activity_description']" position="attributes">
                    <attribute name="attrs">{'required': [('l10n_cl_sii_taxpayer_type', '=', '1')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='l10n_cl_dte_email']" position="before">
                    <button class="oe_highlight" string="Obtener Correo DTE" name="get_taxpayer_mail" type="object" />
                </xpath>
            </field>
        </record>
        <record id="view_partner_vat_form_inherit" model="ir.ui.view">
            <field name="name">Formulario de Contacto DTE</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_latam_base.view_partner_latam_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@class='oe_inline'][2]" position="attributes">
                    <attribute name="attrs">{'required': [('l10n_cl_sii_taxpayer_type', '=', '1')]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
