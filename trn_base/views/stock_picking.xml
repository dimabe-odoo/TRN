<odoo>
    <data>
        <record id="view_stock_picking_tree_inherit" model="ir.ui.view">
            <field name="name">Movimientos de Productos</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="analytic_account"/>
                    <field name="product_unit_cost"/>
                    <field name="product_total_cost" sum="Costo Total"/>
                    <field name="contact_id" domain="[['is_company','=',False]]"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="category_id"/>
                </xpath>
            </field>
        </record>
        <record id="view_stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">Formulation Picking</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <!--                <xpath expr="//header" position="inside">-->
                <!--&lt;!&ndash;                    TODO DELETE&ndash;&gt;-->
                <!--                    <button type="object" name="generate_report" string="Prueba para reporte"/>-->
                <!--                </xpath>-->
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="attrs">{'required': [('picking_type_code','=','outgoing')]}</attribute>
                </xpath>
                <xpath expr="//sheet" position="attributes">
                    <attribute name="class">oe_form_sheet_width_wider</attribute>
                </xpath>
                <xpath expr="//field[@name='date_done']" position="replace">
                    <field name="delayed_picking"/>
                    <field name="date_done"
                           attrs="{'invisible': ['&amp;',('delayed_picking','=',False),'|',('state','!=','done'),('delayed_picking','=',True)], 'readonly': ['&amp;', ('delayed_picking','=',True), ('state','=','done'),'|',('state','=','done')], 'required': [('delayed_picking','=', True)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>