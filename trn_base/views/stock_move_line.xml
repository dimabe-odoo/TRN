<odoo>
    <data>
        <record id="view_stock_move_line_detailed_operation_tree_inherit" model="ir.ui.view">
            <field name="name">Detailed Operations Inherit</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']"
                       position="after">
                    <field name="picking_code" invisible="1" optional="show"/>
                    <field name="is_return_line" invisible="1" optional="show"/>
                    <field name="product_requested_qty" optional="show"/>
                    <field name="analytic_account" optional="show"
                           attrs="{'required': [('picking_code','=','outgoing')],'invisible': [('picking_code','!=','outgoing')]}"/>
                    <field name="supplier_lot" optional="show"
                           attrs="{'column_invisible': [('parent.picking_type_code', '=', 'outgoing')]}"/>
                    <field name="stock_product_lot_ids" optional="show" invisible="1"/>
                    <field name="product_stock_qty" optional="show"/>
                    <field name="employee_id"/>
                </xpath>
                <xpath expr="//field[@name='lot_name']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='lot_id']" position="attributes">
                    <attribute name="domain">[('id','in',stock_product_lot_ids)]</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_stock_move_line_detailed_operation_barcode_inherit" model="ir.ui.view">
            <field name="name">Details Operation Barcode</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock_barcode.stock_move_line_product_selector"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('row')][2]" position="before">
                    <div class="row" attrs="{'invisible': [('picking_code','!=','outgoing')]}">
                        <div class="col-6 my-2 d-flex align-item-baseline">
                            <i class="fa fa-fw fa-lg fa fa-shield fa-rotate-270 mr-3" title="Demanda"/>
                            <field name="product_requested_qty" class="w-50 w-md-100 text-right" readonly="1"/>
                        </div>
                        <div class="col-6 my-2 d-flex align-items-baseline" groups="uom.group_uom">
                            <i class="fa mr-3"/>
                            <field name="product_uom_id" placeholder="Unidad de Medida"
                                   options="{'no_open': True}"
                                   readonly="1"/>
                        </div>
                    </div>
                </xpath>
                <xpath expr="//div[hasclass('row')][2]" position="after">
                    <div class="row" attrs="{'invisible': [('picking_code','=', 'outgoing')]}">
                        <div class="col-12 my-2 d-flex align-items-baseline">
                            <i class="fa fa-barcode mr-3"/>
                            <field name="supplier_lot"
                                   placeholder="Lote Proveedor"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="view_stock_move_line_search_view" model="ir.ui.view">
            <field name="name">Filtros Movimientos de Producto</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.stock_move_line_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="category_id"/>
                </xpath>
                <xpath expr="//filter[@name='groupby_product_id']" position="after">
                    <filter string="Categoria de Producto" name="group_by_category_id"
                            context="{'group_by': 'category_id'}"/>
                </xpath>
            </field>
        </record>
        <record id="view_stock_move_line_form_inherit" model="ir.ui.view">
            <field name="name">Formulario Movimientos de Producto</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="after">
                    <field name="notes"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>