<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_stock_quant_search_view" model="ir.ui.view">
        <field name="name">Filtros Informe de Inventario</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="category_id"/>
            </xpath>
            <xpath expr="//filter[@name='productgroup']" position="after">
                <filter string="Categoria de Producto" name="group_by_category_id"
                        context="{'group_by': 'category_id'}"/>
            </xpath>
        </field>
    </record>
    <record id="view_stock_quant_category_tree_view" model="ir.ui.view">
        <field name="name">Reporte de Inventario</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="category_id" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>