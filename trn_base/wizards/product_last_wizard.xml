<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_last_wizard_form_view" model="ir.ui.view">
            <field name="name">Informe ultimo entrada y salida</field>
            <field name="model">product.last.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <footer>
                        <button name="generate_report" string="Generar Reporte" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_report_product_last_wizard" model="ir.actions.act_window">
            <field name="name">Informe ultimo entrada y salida</field>
            <field name="res_model">product.last.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="product_last_wizard_form_view"/>
            <field name="target">new</field>
        </record>
        <menuitem name="Informe ultimo entrada y salida " parent="stock.menu_warehouse_report"
              action="action_report_product_last_wizard" id="report_last_product_item"/>
    </data>
</odoo>